{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run checkfrench",
            "type": "debugpy",
            "request": "launch",
            "module": "checkfrench.main",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run debug test",
            "type": "debugpy",
            "request": "launch",
            "module": "checkfrench.test",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                "tests",
                "-p",
                "test_*.py",
                "-t",
                "."
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}
